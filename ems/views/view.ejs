<%- include("header") %>
<%- include("navbar") %>
<div role="main" class="container">
<!--Container for form-->
<h2>Employee Details</h2>
      <br />
      <div>
        <a href="/" class= "float-right" style="text-decoration: none; color: green;">
          <svg class="bi bi-house-door" width="2em" height="2em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M7.646 1.146a.5.5 0 01.708 0l6 6a.5.5 0 01.146.354v7a.5.5 0 01-.5.5H9.5a.5.5 0 01-.5-.5v-4H7v4a.5.5 0 01-.5.5H2a.5.5 0 01-.5-.5v-7a.5.5 0 01.146-.354l6-6zM2.5 7.707V14H6v-4a.5.5 0 01.5-.5h3a.5.5 0 01.5.5v4h3.5V7.707L8 2.207l-5.5 5.5z" clip-rule="evenodd"/>
            <path fill-rule="evenodd" d="M13 2.5V6l-2-2V2.5a.5.5 0 01.5-.5h1a.5.5 0 01.5.5z" clip-rule="evenodd"/>
          </svg>
        </a><br />
        <h2 class="text-success"><%= employee[0].firstName %>'s Information:</h2>
        <div class="form-group text-white" >
          <label for="txtFirstName">First Name:</label>
          <input type="text" class="form-control" id="txtFirstName" name="txtFirstName" readonly
          value="<%= employee[0].firstName %>"/>

          <label for="txtLastName">Last Name:</label>
          <input type="text" class="form-control" id="txtLastName" name="txtLastName" readonly
          value="<%= employee[0].lastName %>"/>

          <label for="txtTitle">Title</label>
          <input type="text" class="form-control" id="txtTitle" name="txtTitle" readonly
          value="<%= employee[0].title %>"/>

          <label for="txtSalary">Salary</label>
          <input type="text" class="form-control" id="txtSalary" name="txtSalary" readonly
          value="<%= employee[0].salary %>"/>

          <label for="txtYears">Years with Company:</label>
          <input type="text" class="form-control" id="txtYears" name="txtYears" readonly
          value="<%= employee[0].years %>"/>
          <br />

        </div>
      </div>
      <br /><br />

      <a href="/" style="text-decoration: none; color: rgb(2, 162, 2);">&larr; Back</a>
    </div>
</div>
<%- include("footer") %>
<%- include("scripts") %>
